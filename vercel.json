{
    "version": 2,
    "builds": [
      {
        "src": "**/*.html",
        "use": "@vercel/static"
      },
      {
        "src": "css/**/*.css",
        "use": "@vercel/static"
      },
      {
        "src": "js/**/*.js",
        "use": "@vercel/static"
      },
      {
        "src": "images/**/*",
        "use": "@vercel/static"
      },
      {
        "src": "blog/**/*.html",
        "use": "@vercel/static"
      }
    ],
    "headers": [
      {
        "source": "/(.*)\\.(jpg|jpeg|png|gif|ico|webp|svg|css|js)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/specs",
        "destination": "/specs.html"
      },
      {
        "source": "/blog",
        "destination": "/blog/index.html"
      },
      {
        "source": "/blog/article",
        "destination": "/blog/article.html"
      }
    ],
    "redirects": [
      {
        "source": "/(.*)",
        "destination": "/index.html",
        "statusCode": 200
      }
    ],
    "trailingSlash": false,
    "cleanUrls": true
  }