{
    "version": 2,
    "builds": [
      {
        "src": "*.html",
        "use": "@vercel/static"
      },
      {
        "src": "css/*.css",
        "use": "@vercel/static"
      },
      {
        "src": "js/*.js",
        "use": "@vercel/static"
      },
      {
        "src": "images/*",
        "use": "@vercel/static"
      },
      {
        "src": "blog/*.html",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/",
        "dest": "/index.html"
      },
      {
        "src": "/specs",
        "dest": "/specs.html"
      },
      {
        "src": "/blog",
        "dest": "/blog/index.html"
      },
      {
        "src": "/blog/article",
        "dest": "/blog/article.html"
      },
      {
        "src": "/(.*)",
        "status": 404,
        "dest": "/404.html"
      }
    ],
    "headers": [
      {
        "source": "/(.*)\\.(css|js|jpg|jpeg|png|gif|ico|webp|svg)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
          }
        ]
      }
    ],
    "trailingSlash": false,
    "cleanUrls": true
  }